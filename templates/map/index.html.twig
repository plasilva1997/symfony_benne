{% extends 'base.html.twig' %}

{% block title %}EcoVerre | Map{% endblock %}

{% block body %}

        {% block navbarmap %}
            <style>
                .navbar{
                    background-color: #154C4A;
                }
            </style>
        {% endblock %}

    <div class="body-map">
        <div class="content">
            <div class="map">
                <div id="map"></div>
            </div>
        </div>
    </div>




   <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.50.0/mapbox-gl.js'></script>
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.50.0/mapbox-gl.css' rel='stylesheet'/>
    <script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.2.0/mapbox-gl-geocoder.min.js'></script>
    <link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.2.0/mapbox-gl-geocoder.css' type='text/css' />

    {% block javascripts %}
        <script type="text/javascript">
            mapboxgl.accessToken= 'pk.eyJ1IjoiYXhlbGJhcmJlaHVzc29uIiwiYSI6ImNrNWZlNWE5cTJrMDczbXBnOGI4NTk2MTMifQ.5l3FgdaFC4KAGnfabyT6Kw';

            var map = new mapboxgl.Map({
                container: 'map', // container id
                style: 'mapbox://styles/mapbox/streets-v11', // style URL
                center: [4.835659, 45.764043], // starting position [lng, lat]
                zoom: 11 // starting zoom
            });


            {% for binn in bin %}
            var marker{{ binn.id }} = new mapboxgl.Marker()
                .setLngLat([ {{ binn.lon }} , {{ binn.lat }}])
                .addTo(map)
                .setPopup(new mapboxgl.Popup().setHTML("<h3>Commune : {{ binn.city }}</h3><h4>Adresse : {{ binn.street }}</h4>"))
            {% endfor %}


            map.addControl(
                new mapboxgl.GeolocateControl({
                    positionOptions: {
                        enableHighAccuracy: true
                    },
                    trackUserLocation: true
                })
            );
            var geocoder = new MapboxGeocoder({ // Initialize the geocoder
                accessToken: mapboxgl.accessToken, // Set the access token
                mapboxgl: mapboxgl, // Set the mapbox-gl instance
                marker: false, // Do not use the default marker style
                placeholder: 'Votre adresse', // Placeholder text for the search bar
                bbox: [ -4.79556, 2.5328, 48.96722, 51.0891], // Boundary for Berkeley

            });
            map.addControl(geocoder);
            map.on('load', function(){


                geocoder.on('result', function(ev) {
                    map.getSource('single-point').setData(ev.result.geometry);
                });

            });


        </script>
    {% endblock %}

    <style>
        .mapboxgl-user-location-dot {
            background-color: #218100;
        }

        .mapboxgl-user-location-dot::before{
            background-color: #33c800;

        }

        .mapboxgl-user-location-dot::after{
            background-color: #33c800;

        }

        .mapboxgl-marke{
            fill: #218100;
        }


        .marker {
            background-image: url{{ asset('build/img/bg_1.jpg') }};
            background-size: cover;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            cursor: pointer;
        }
    </style>


{% endblock %}